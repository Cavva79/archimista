<%# Upgrade 2.0.0 fine %>

<div class="span9">
<%# TAI aggiunto = prima di form_for %>
<%= form_for @group do |f| %>
<%# TAI aggiunto raw() %>
<%# TAI aggiunto parametro per specificare nome e caption %>
  <%= f.label :name, raw(t('name') + required_marker) %>
  <%= f.text_field :name, :class => "span6" %>
  <p><%= f.submit @group.new_record? ? t('create_group') : t('save'), :class => "btn btn-primary" %></p>
<% end %>
</div>
